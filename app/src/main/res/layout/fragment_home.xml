<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llUser"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/cardview_shape"
                android:orientation="vertical"
                android:weightSum="1">
                <TextView
                    android:id="@+id/tvUserList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginVertical="@dimen/_12sdp"
                    android:text="User"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:layout_margin="30dp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/llBook"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/cardview_shape"
                android:orientation="vertical"
                android:weightSum="1">
                <TextView
                    android:id="@+id/tvBook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_12sdp"
                    android:text="Book "
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:layout_margin="30dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llAuthers"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/cardview_shape"
                android:orientation="vertical"
                android:weightSum="1">
                <TextView
                    android:id="@+id/tvAuthers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_12sdp"
                    android:text="Authers"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:layout_margin="30dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llActivities"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/cardview_shape"
                android:orientation="vertical"
                android:weightSum="1">
                <TextView
                    android:id="@+id/tvActivities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_12sdp"
                    android:text="Activities"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:layout_margin="30dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llCoverPhto"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/_12sdp"
                android:background="@drawable/cardview_shape"
                android:orientation="vertical"
                android:weightSum="1">
                <TextView
                    android:id="@+id/tvCoverPhto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_12sdp"
                    android:text="Cover Photo"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:layout_margin="30dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>